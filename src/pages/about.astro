---
import Layout from "../layouts/Layout.astro";
import AboutHero from "../components/about/Hero.astro";
import History from "../components/about/History.astro";
import TeamSection from "../components/about/TeamSection.astro";
import ContactForm from "../components/forms/Contact.astro";
---

<Layout title="Sobre Nosotros - SIMAPI">
  <main>
    <AboutHero
      title="Sobre Nosotros"
      description="En SIMAPI, nos dedicamos a transformar la gestión hídrica a través de la innovación tecnológica. Nuestro compromiso es proporcionar soluciones que optimicen recursos y mejoren la eficiencia operativa."
      image="/about-hero.jpg"
    />
    <History />
    <TeamSection />
    <ContactForm />
  </main>
</Layout>

<style>
  main {
    width: 100%;
  }
</style>
