---
interface Props {
  title: string;
  description: string;
  image: string;
  link: string;
}

const { title, description, image, link } = Astro.props;
---

<div
  class="bg-background border rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition duration-300"
>
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold text-foreground mb-3">{title}</h3>
    <p class="text-muted-foreground mb-4">{description}</p>
    <a href={link} class="text-blue-600 transition-colors">
      Ver más información →
    </a>
  </div>
</div>
