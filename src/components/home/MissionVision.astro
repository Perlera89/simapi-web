---
import { Zap, Lightbulb } from "lucide-react";
import CardComponent from "../Card";
---

<section id="mision" class="py-20 bg-background">
  <div class="container mx-auto px-4">
    <div class="max-w-5xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-foreground mb-4">
          Nuestros valores
        </h2>
        <div
          class="w-20 h-1 bg-gradient-to-r from-blue-600 to-cyan-600 mx-auto"
        >
        </div>
      </div>

      <div class="grid md:grid-cols-2 gap-16">
        <CardComponent
          title="Misión"
          description="Ser la empresa con las mejores soluciones tecnológicas para nuestros usuarios en pro del avance de la humanidad."
          Icon={Zap}
        />
        <CardComponent
          title="Visión"
          description="Crear soluciones prácticas, visionarias e innovadoras que pongan en primer lugar la satisfacción de nuestros clientes."
          Icon={Lightbulb}
        />
      </div>
    </div>
  </div>
</section>
